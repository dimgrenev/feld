{
  "name": "Select",
  "description": "A select component with support for single and multiple selection.",
  "properties": [
    { "name": "id", "type": "string", "description": "Unique identifier for the select" },
    { "name": "label", "type": "string", "description": "Label for the select field" },
    { "name": "options", "type": "SelectOption[]", "description": "Available options", "required": true },
    { "name": "value", "type": "string", "description": "Selected value for single select" },
    { "name": "values", "type": "string[]", "description": "Selected values for multiple select" },
    { "name": "multiple", "type": "boolean", "description": "Whether multiple selection is allowed", "defaultValue": false },
    { "name": "disabled", "type": "boolean", "description": "Whether the select is disabled", "defaultValue": false },
    { "name": "placeholder", "type": "string", "description": "Placeholder text", "defaultValue": "Выберите опцию" },
    { "name": "className", "type": "string", "description": "Additional CSS class names" }
  ],
  "events": [
    { "name": "onChange", "description": "Event fired when selection changes" }
  ]
} 